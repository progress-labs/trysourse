<div class="container pt-24 md:pt-40">
    <h2 class="font-bold text-primary text-3xl md:text-4xl lg:text-5xl">{{ section.settings.title }}</h2>
    <div class="grid grid-cols-1 xl:grid-cols-3 gap-14 xl:gap-44 pt-12">
        {% for block in section.blocks %}
            <div>
                <div class="w-40 h-40 p-5 flex items-center justify-center {{ block.settings.background_color }}">
                    <div>
                        <img src="{{ block.settings.source_image| img_url: '1000x' }}" class="rounded-tl-4xl rounded-br-4xl" alt="image">
                    </div>
                </div>
                <div class="md:w-3/5 xl:w-full font-semibold text-neutrals-gray min-h-24 xl:min-h-32 mt-8">
                    {{ block.settings.testimonial_content }}
                </div>
                <a href="{{ block.settings.source_url }}" class="font-bold text-lg {{ block.settings.source_text_color }}">{{ block.settings.testimonial_source }}</a>
            </div>
        {% endfor %}
    </div>
</div>

{% schema %}
{
    "name": "Testimonials",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        }
    ],
    "blocks": [
        {
            "type": "testimonial",
            "name": "Testimonial",
            "settings": [
                {
                    "type": "select",
                    "id": "background_color",
                    "label": "Background Color",
                    "options": [
                        {
                            "value": "bg-bright-orange",
                            "label" : "Orange"
                        },
                        {
                            "value": "bg-bright-pink",
                            "label" : "Pink"
                        },
                        {
                            "value": "bg-primary",
                            "label" : "Purple"
                        }
                    ]
                },
                {
                    "type": "image_picker",
                    "id": "source_image",
                    "label": "Source Image"
                },
                {
                    "type": "richtext",
                    "id": "testimonial_content",
                    "label": "Content"
                },
                {
                    "type": "text",
                    "id": "testimonial_source",
                    "label": "Source"
                },
                {
                    "type": "url",
                    "id": "source_url",
                    "label": "Source link"
                },
                {
                    "type": "select",
                    "id": "source_text_color",
                    "label": "Text Color",
                    "options": [
                        {
                            "value": "text-bright-orange",
                            "label" : "Orange"
                        },
                        {
                            "value": "text-bright-pink",
                            "label" : "Pink"
                        },
                        {
                            "value": "text-primary",
                            "label" : "Purple"
                        }
                    ]
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Testimonials",
            "category": "Custom Sections"
        }
    ]
}

{% endschema %}
