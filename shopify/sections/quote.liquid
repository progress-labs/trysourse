<div class="bg-neutrals-white-bone">
    <renderless-quote>
        <div class="container pt-24 md:pt-40">
            <div
                    style="--swiper-navigation-color: #fff; --swiper-pagination-color: #fff"
                    class="swiper mySwiper2"
                >
                    <div class="swiper-wrapper">
                        {% for block in section.blocks %}
                        <div class="swiper-slide">
                            <div class="lg:w-3/4 mx-auto">
                                <div>
                                    <img src="{{ 'icon-quote-up.static.png' | asset_img_url: '300x' }}" class="w-20" alt="icon quote">
                                </div>
                                <div class="w-5/6 md:w-3/4 mx-auto text-center">
                                    <h3 class="font-semibold text-3xl text-primary">{{ block.settings.quote_content }}</h3>
                                </div>
                                <div>
                                    <img src="{{ 'icon-quote-down.static.png' | asset_img_url: '300x' }}" class="w-20 ml-auto" alt="icon quote">
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
            </div>
            <div thumbsSlider="" class="swiper mySwiper mt-12 md:mt-24">
                <div class="swiper-wrapper flex items-center">
                    {% for block in section.blocks %}
                    <div class="swiper-slide">
                        <img src="{{ block.settings.quote_logo | img_url: '500x' }}" class="max-h-14 md:max-h-24 mx-auto lg:mx-0" alt="image" >
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </renderless-quote>
</div>

{% schema %}

{
    "name": "Quote",
    "blocks": [
         {
             "type": "quote",
             "name": "Quote",
             "settings": [
                {
                    "type": "richtext",
                    "id": "quote_content",
                    "label": "Quote Content"
                },
                {
                    "type": "image_picker",
                    "id": "quote_logo",
                    "label": "Company Logo"
                }
             ]
         }
    ],
    "presets": [
        {
            "name": "Quote",
            "category": "Custom Sections"
        }
    ]
}

{% endschema %}
