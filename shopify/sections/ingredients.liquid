<div class="bg-neutrals-white-bone">
    <div class="container py-24 md:py-40">
        <div class="w-5/6 mx-auto">
            <h2 class="font-bold text-primary text-3xl md:text-4xl lg:text-5xl text-center">{{ section.settings.title }}</h2>
            <div class="grid grid-cols-1 xl:grid-cols-3 gap-14 xl:gap-44 pt-20">
                {% for block in section.blocks %}
                    <div class="text-center">
                        <div>
                            <img src="{{ block.settings.ingredients_image| img_url: '1000x' }}" class="border-4 border-primary rounded-full mx-auto" alt="image">
                        </div>
                        <h4 class="font-bold text-primary text-2xl mt-5">{{ block.settings.ingredient_name }}</h4>
                        <div class="font-semibold text-neutrals-gray-light pt-2">
                            {{ block.settings.ingredient_description }}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Ingredients",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Title"
        }
    ],
    "blocks": [
        {
            "type": "ingredients",
            "name": "Ingredient",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "ingredients_image",
                    "label": "Ingredient Image"
                },
                {
                    "type": "text",
                    "id": "ingredient_name",
                    "label": "Ingredient Name"
                },
                {
                    "type": "richtext",
                    "id": "ingredient_description",
                    "label": "Ingredient Description"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Ingredients",
            "category": "Custom Sections"
        }
    ]
}

{% endschema %}
