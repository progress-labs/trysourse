
{%- comment -%} ADD ADDRESS {%- endcomment -%}
<div class="container mt-16 md:mt-24 hidden">
    <div class="hidden md:block">
        {% render 'account-tabs' %}
    </div>
    <div class="block md:hidden">
        {% render 'account-tabs' %}
    </div>
    <div class="md:w-5/6 lg:w-3/5 mt-12 md:mt-16">
        <div class="border-b-8 border-[#dcdade] pb-8">
            <h4 class="font-semibold text-primary text-2xl">Add address</h4>
        </div>
        <form class="w-11/12 mt-9 md:mt-12 mx-auto md:mx-0">
            <div class="flex flex-col md:flex-row gap-5 md:gap-7">
                <div class="w-full md:w-1/2">
                    <label class="text-neutrals-gray pb-1 block">First Name</label>
                    <input type="text" class="w-full bg-white border border-primary rounded-md block text-neutrals-gray">
                </div>
                <div class="w-full md:w-1/2">
                    <label class="text-neutrals-gray pb-1 block">Last Name</label>
                    <input type="text" class="w-full bg-white border border-primary rounded-md block text-neutrals-gray">
                </div>
            </div>
            <div class="w-full md:w-3/5 mt-5 md:mt-7">
                <label class="text-neutrals-gray pb-1 block">Address</label>
                <input type="text" class="w-full bg-white border border-primary rounded-md block text-neutrals-gray">
            </div>
            <div class="flex flex-col md:flex-row gap-5 md:gap-7 mt-5 md:mt-7">
                <div class="w-full md:w-1/2">
                    <label class="text-neutrals-gray pb-1 block">City</label>
                    <input type="text" class="w-full bg-white border border-primary rounded-md block text-neutrals-gray">
                </div>
                <div class="w-1/2 md:w-1/4">
                    <label class="text-neutrals-gray pb-1 block">State</label>
                    <input type="text" class="w-full bg-white border border-primary rounded-md block text-neutrals-gray">
                </div>
                <div class="w-1/2 md:w-1/4">
                    <label class="text-neutrals-gray pb-1 block">Zip code</label>
                    <input type="number" class="w-full bg-white border border-primary rounded-md block text-neutrals-gray">
                </div>
            </div>
            <button class="mt-9 md:mt-12 font-semibold text-white bg-primary px-6 py-1.5 rounded-2xl">+ Add Address</button>
        </form>
    </div>
</div>

