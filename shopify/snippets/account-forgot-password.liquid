<div class="w-5/6 mx-auto mt-14 md:mt-24">
  <h1 class="text-3xl md:text-4xl font-header font-black text-primary mb-5 text-center">
    {{ 'customer.reset_password.title' | t }}
  </h1>
</div>

<p class="text-sm text-center mb-12">
  {{ 'customer.entry.reset_password_notice' | t }}
</p>

{% form 'recover_customer_password' %}
  <div class="md:w-3/4 mx-auto">
    {% if form.errors %}
    {% capture error_text %}
      {{ form.errors | default_errors }}
      {% endcapture%}

      {% render 'layout-message',
        type: 'error'
        text: error_text
        class: 'mb-8'
      %}
    {% endif %}

    {% if form.posted_successfully
      ? %}
      {% assign translation_response = 'customer.entry.reset_password_response' | t %}
      {% render 'layout-message',
        type: 'success'
        text: translation_response
        class: 'mb-8'
      %}
    {% endif %}

    <div class="mb-12">
      <label for="RecoverEmail" class="block text-neutrals-gray text-sm pb-1">
        {{ 'form.email' | t }}
      </label>

      <input type="email" id="RecoverEmail" name="email" class="w-full rounded-md text-neutrals-gray" required="required">
    </div>

    <div class="flex justify-center flex-col md:flex-row gap-4 sm:gap-6 mt-14">
      <button type="submit" class="button button-primary font-header font-black text-white text-xl bg-primary hover:bg-bright-purple duration-200 transition text-center px-4 md:px-12
      py-3 rounded-l-3xl rounded-br-3xl w-3/5 md:w-auto mx-auto md:mx-0 ">
        {{ 'action.restore' | t }}
      </button>

      <div class="w-full sm:w-auto flex justify-center items-center">
        <button class="font-header font-black text-primary text-xl md:ml-5" @click.prevent="show('login')">
          {{ 'action.cancel' | t }}
        </button>
      </div>
    </div>
  </div>
  {% endform %}
